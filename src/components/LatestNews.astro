---
import NewsCard from './NewsCard.astro';

const latestNews = [
  {
    title: "OpenAI Announces GPT-5 with Enhanced Reasoning Capabilities",
    excerpt: "The latest iteration of GPT promises significant improvements in logical reasoning, factual accuracy, and specialized knowledge domains.",
    image: "https://images.unsplash.com/photo-1620712943543-bcc4688e7485?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 15, 2023",
    author: "Sarah Johnson",
    url: "/news/openai-announces-gpt5",
    category: "Product Launch"
  },
  {
    title: "Google's DeepMind Achieves Breakthrough in Protein Folding",
    excerpt: "AlphaFold 3 can now predict protein structures with near-perfect accuracy, potentially revolutionizing drug discovery and medical research.",
    image: "https://images.unsplash.com/photo-1532187863486-abf9dbad1b69?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 10, 2023",
    author: "Michael Chen",
    url: "/news/deepmind-protein-folding-breakthrough",
    category: "Research"
  },
  {
    title: "EU Unveils Comprehensive AI Regulation Framework",
    excerpt: "The European Union has introduced new regulations aimed at ensuring ethical AI development while fostering innovation in the sector.",
    image: "https://images.unsplash.com/photo-1529107386315-e1a2ed48a620?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 5, 2023",
    author: "Elena Petrova",
    url: "/news/eu-ai-regulation-framework",
    category: "Policy"
  }
];
---

<section class="py-16 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Latest AI News</h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">Stay updated with the most recent developments in the world of artificial intelligence.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {latestNews.map(news => (
        <NewsCard {...news} />
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/news" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-700 text-base font-medium rounded-md text-gray-900 dark:text-white bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 shadow-sm transition-all duration-300">
        View All News
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
