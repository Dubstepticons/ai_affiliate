---
import AIToolCard from './AIToolCard.astro';

const featuredTools = [
  {
    title: "ChatGPT Plus",
    description: "Advanced AI chatbot with GPT-4 capabilities, offering improved reasoning, creativity, and knowledge.",
    image: "https://images.unsplash.com/photo-1655720828018-edd2daec9349?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    category: "Chatbot",
    rating: 4.8,
    url: "/tools/chatgpt-plus",
    price: "$20/month"
  },
  {
    title: "Midjourney",
    description: "AI art generator that creates stunning images from text descriptions with remarkable detail and creativity.",
    image: "https://images.unsplash.com/photo-1659478930352-1ae1eda7035d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    category: "Image Generation",
    rating: 4.7,
    url: "/tools/midjourney",
    price: "$10-30/month"
  },
  {
    title: "Jasper",
    description: "AI writing assistant that helps create marketing copy, blog posts, and content with human-like quality.",
    image: "https://images.unsplash.com/photo-1655720801511-d7f0d1bf7e6e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    category: "Writing",
    rating: 4.5,
    url: "/tools/jasper",
    price: "$49/month"
  },
  {
    title: "Synthesia",
    description: "Create AI-generated videos with virtual presenters speaking your script in multiple languages.",
    image: "https://images.unsplash.com/photo-1616469829581-73993eb86b02?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    category: "Video",
    rating: 4.6,
    url: "/tools/synthesia",
    price: "$30/month"
  }
];
---

<section class="py-16 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Featured AI Tools</h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">Discover the most powerful AI tools that are transforming how we work and create.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {featuredTools.map(tool => (
        <AIToolCard {...tool} />
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <a href="/tools" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 shadow-md transition-all duration-300">
        View All AI Tools
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>
