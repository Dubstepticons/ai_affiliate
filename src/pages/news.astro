---
import Layout from '../layouts/Layout.astro';
import NewsCard from '../components/NewsCard.astro';

const allNews = [
  {
    title: "OpenAI Announces GPT-5 with Enhanced Reasoning Capabilities",
    excerpt: "The latest iteration of GPT promises significant improvements in logical reasoning, factual accuracy, and specialized knowledge domains.",
    image: "https://images.unsplash.com/photo-1620712943543-bcc4688e7485?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 15, 2023",
    author: "Sarah Johnson",
    url: "/news/openai-announces-gpt5",
    category: "Product Launch"
  },
  {
    title: "Google's DeepMind Achieves Breakthrough in Protein Folding",
    excerpt: "AlphaFold 3 can now predict protein structures with near-perfect accuracy, potentially revolutionizing drug discovery and medical research.",
    image: "https://images.unsplash.com/photo-1532187863486-abf9dbad1b69?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 10, 2023",
    author: "Michael Chen",
    url: "/news/deepmind-protein-folding-breakthrough",
    category: "Research"
  },
  {
    title: "EU Unveils Comprehensive AI Regulation Framework",
    excerpt: "The European Union has introduced new regulations aimed at ensuring ethical AI development while fostering innovation in the sector.",
    image: "https://images.unsplash.com/photo-1529107386315-e1a2ed48a620?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "June 5, 2023",
    author: "Elena Petrova",
    url: "/news/eu-ai-regulation-framework",
    category: "Policy"
  },
  {
    title: "Meta Releases Open-Source Large Language Model",
    excerpt: "Meta has released a new open-source LLM that rivals proprietary models in performance while being freely available for research and commercial use.",
    image: "https://images.unsplash.com/photo-1563986768609-322da13575f3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "May 28, 2023",
    author: "James Wilson",
    url: "/news/meta-open-source-llm",
    category: "Open Source"
  },
  {
    title: "AI-Generated Content Surpasses Human Writers in Blind Test",
    excerpt: "In a recent blind test, content created by AI was rated higher than human-written articles across multiple metrics including clarity and engagement.",
    image: "https://images.unsplash.com/photo-1516110833967-0b5716ca1387?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "May 22, 2023",
    author: "Sophia Martinez",
    url: "/news/ai-content-surpasses-human-writers",
    category: "Research"
  },
  {
    title: "New AI Chip Promises 5x Performance Improvement for Edge Devices",
    excerpt: "A startup has unveiled a revolutionary AI chip design that delivers five times the performance of current solutions while consuming less power.",
    image: "https://images.unsplash.com/photo-1518770660439-4636190af475?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
    date: "May 15, 2023",
    author: "Robert Chang",
    url: "/news/new-ai-chip-edge-devices",
    category: "Hardware"
  }
];

const categories = [...new Set(allNews.map(news => news.category))];
---

<Layout title="AI News - AINexus">
  <main>
    <section class="bg-gradient-to-b from-primary-900 to-primary-800 py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl font-bold text-white font-display">Latest AI News</h1>
          <p class="mt-4 text-xl text-primary-100">Stay updated with the most recent developments in the world of artificial intelligence.</p>
        </div>
      </div>
    </section>
    
    <section class="py-12 bg-gray-50 dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8 flex flex-wrap items-center justify-between">
          <div class="mb-4 md:mb-0">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">All News</h2>
            <p class="text-gray-600 dark:text-gray-400">Showing {allNews.length} articles</p>
          </div>
          
          <div class="flex flex-wrap gap-2">
            <button class="px-4 py-2 rounded-md bg-primary-600 text-white text-sm font-medium">All</button>
            {categories.map(category => (
              <button class="px-4 py-2 rounded-md bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200 text-sm font-medium hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors">{category}</button>
            ))}
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {allNews.map(news => (
            <NewsCard {...news} />
          ))}
        </div>
        
        <div class="mt-12 flex justify-center">
          <nav class="inline-flex rounded-md shadow">
            <a href="#" class="px-4 py-2 rounded-l-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700">Previous</a>
            <a href="#" class="px-4 py-2 border-t border-b border-gray-300 dark:border-gray-700 bg-primary-50 dark:bg-primary-900 text-primary-600 dark:text-primary-300">1</a>
            <a href="#" class="px-4 py-2 border-t border-b border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700">2</a>
            <a href="#" class="px-4 py-2 border-t border-b border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700">3</a>
            <a href="#" class="px-4 py-2 rounded-r-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700">Next</a>
          </nav>
        </div>
      </div>
    </section>
    
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white font-display">Subscribe to Our Newsletter</h2>
          <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">Get the latest AI news delivered straight to your inbox.</p>
          
          <form class="mt-8 sm:flex justify-center">
            <div class="min-w-0 flex-1">
              <label for="email-newsletter" class="sr-only">Email address</label>
              <input id="email-newsletter" type="email" placeholder="Enter your email" class="block w-full rounded-l-md border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 text-base text-gray-900 dark:text-white placeholder-gray-500 focus:border-primary-500 focus:ring-primary-500">
            </div>
            <div class="mt-3 sm:mt-0 sm:ml-3">
              <button type="submit" class="block w-full rounded-r-md bg-primary-600 px-4 py-3 font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>
